@model ethko.Models.AddCaseViewModel
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../Scripts/bootstrap-3.4.0.min.css">
    <script src="../Scripts/jquery-3.4.0.min.js"></script>
    <script src="../Scripts/bootstrap.min.js"></script>
</head>
<br />
<a class="btn btn-default" href='@Url.Action("Index", "Cases")'>Cases</a>&nbsp;
<a class="btn btn-default" href='@Url.Action("PracticeAreas", "Cases")'>Practice Areas</a>&nbsp;
<a class="btn btn-default" href='@Url.Action("CaseInsights", "Cases")'>Case Insights</a>&nbsp;
<a class="btn btn-primary" href='@Url.Action("New", "Contacts")'>Add Case</a>&nbsp;


<br />
<h1>Add Case</h1>
<center>

    <p>
        <div class="col-md-12">
            @using (Html.BeginForm("New", "Cases", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="col-md-2" align="left">
                        Name
                    </div>
                    <div class="col-md-4" align="left">
                        @Html.TextBoxFor(m => m.CaseContact, new { @class = "form-control", placeholder = "Search for an existing contact or company" })
                    </div>
                    <div class="col-md-2" align="left">
                        <a class="btn btn-default" href='@Url.Action("New", "Contacts")'>Add Contact</a>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2" align="left">
                        Email
                    </div>
                    <div class="col-md-10" align="left">
                        @Html.TextBoxFor(m => m.CaseName, new { @class = "form-control", placeholder = "e.g. John Doe - Divorce" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2" align="left">
                        Contact Group
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2" align="left">
                        Enable Client Portal
                    </div>
                    <div class="col-md-10" align="left">
                        <select class="form-control" id="sel1">
                            <option>No</option>
                            <option>Yes</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2" align="left">
                        Cell Phone
                    </div>
                    <div class="col-md-10" align="left">
                        @Html.TextBoxFor(m => m.CaseNumber, new { @class = "form-control", placeholder = "555-555-5555" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2" align="left">
                        Practice Area
                    </div>
                    <div class="col-md-10" align="left">
                        @Html.TextBoxFor(m => m.PracticeArea, new { @class = "form-control", placeholder = "" })
                        @Html.ActionLink("Add new practice area", "SetPassword")
                    </div>
                    <div class="col-md-2" align="left">
                        
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2" align="left">
                        Home Phone
                    </div>
                    <div class="col-md-10" align="left">
                        @Html.TextBoxFor(m => m.CaseStage, new { @class = "form-control", placeholder = "555-555-5555" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2" align="left">
                        Address
                    </div>
                    <div class="col-md-10" align="left">
                        @Html.TextBoxFor(m => m.DateOpened, new { @class = "form-control", placeholder = "123 Main Street" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2" align="left">
                        Address 2
                    </div>
                    <div class="col-md-10" align="left">
                        @Html.TextBoxFor(m => m.Office, new { @class = "form-control", placeholder = "Apartment B" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2" align="left">
                        City
                    </div>
                    <div class="col-md-10" align="left">
                        @Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "Birmingham" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2" align="left">
                        State
                    </div>
                    <div class="col-md-10" align="left">
                        @Html.TextBoxFor(m => m.Statute, new { @class = "form-control", placeholder = "AL" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a class="btn btn-default" href='@Url.Action("Index", "Cases")'>Cancel</a>
                        <input type="submit" class="btn btn-success" value="Save Case" />
                    </div>
                </div>
            }
        </div>
    </p>
</center>
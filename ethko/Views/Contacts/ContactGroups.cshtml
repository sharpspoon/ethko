@model ethko.Models.ContactIndividualViewModel
@{
    ViewBag.Title = "Contact Groups";
}

<br />
<a class="btn btn-default" href='@Url.Action("Index", "Contacts")'>Contacts</a>&nbsp;
<a class="btn btn-default" href='@Url.Action("Companies", "Contacts")'>Companies</a>&nbsp;
<a class="btn btn-primary" href='@Url.Action("ContactGroups", "Contacts")'>Contact Groups</a>&nbsp;
<br />
<br />
<h2>
    @ViewBag.Title
    <a class="btn btn-primary" href='@Url.Action("NewGroup", "Contacts")' rel="modal:open" style="float: right">Add Contact Group</a>
</h2>




@using (Html.BeginForm("Index", "Contacts", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Final Output</title>
        <meta name="description" content="Bootstrap.">

    </head>
    <body style="margin:20px auto">
        <div class="container">
            <br />
            <table id="myTable" class="table table-hover">
                <thead>
                    <tr>
                        <th>Group Name</th>
                        <th>Contacts</th>
                        <th>Created By</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Client</td>
                        <td>4</td>
                        <td>System Default</td>
                    </tr>
                    <tr>
                        <td>dynamic</td>
                        <td>1</td>
                        <td>username</td>
                    </tr>
                    <tr>
                        <td>Unassigned</td>
                        <td>0</td>
                        <td>System Default</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </body>

</html>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#myTable').dataTable();
        });
    </script>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <link rel="stylesheet" href="http://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css">
    <script type="text/javascript" src="http://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

    <style>

        .table-hover tbody tr:hover td, .table-hover tbody tr:hover th {
            background-color: #c4c4c4;
        }
    </style>
}

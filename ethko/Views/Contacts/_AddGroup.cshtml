@model ethko.Models.AddContactGroupViewModel

<br />
<a class="btn btn-default" href='@Url.Action("Index", "Contacts")'>Contacts</a>&nbsp;
<a class="btn btn-default" href='@Url.Action("Companies", "Contacts")'>Companies</a>&nbsp;
<a class="btn btn-default" href='@Url.Action("ContactGroups", "Contacts")'>Contact Groups</a>&nbsp;
<a class="btn btn-primary" href='@Url.Action("New", "Contacts")'>Add Contact</a>&nbsp;
<h2>
    @ViewBag.Title
    <a class="btn btn-primary" href='@Url.Action("New", "Contacts")' style="float: right">Add Contact</a>
    <a class="btn btn-default" href='@Url.Action("ContactsArchive", "Contacts")' style="float: right">Import Contacts</a>
</h2>

<p>Add Group</p>
<br />
<center>
    <p>
        <div class="col-md-12">
            @using (Html.BeginForm("NewGroup", "Contacts", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="col-md-4" align="left">
                        @Html.TextBoxFor(m => m.ContactGroupName, new { @class = "form-control", placeholder = "Group Name" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a class="btn btn-default" href="#" rel="modal:close">Cancel</a>
                        <input type="submit" class="btn btn-primary" value="Save Group" />
                    </div>
                </div>
            }
        </div>
    </p>
</center>